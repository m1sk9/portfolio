---
import Layout from '../organisms/Layout.astro';
import { css } from '../../styled-system/css';
import { BodyLayout, ItemLayout } from '../style/recipes/layout.css';

import ProjectList from '../molecules/ProjectList.astro';
import { LyricRoll } from '../molecules/LyricRoll.tsx';
---

<Layout title="m1sk9's portfolio">
  <body>
    <div class={ItemLayout({ type: 'centerAlign' })}>
      <img
        class={css({ borderRadius: 50 })}
        src="./icon.jpg"
        width="100"
        height="100"
        alt="m1sk9 のアイコン"
      />
    </div>

    <div class={BodyLayout()}>
      <div class={css({ textStyle: 'body' })}>
        <p>Hi. I'm Sho Sakuma. Also known as m1sk9.</p>
        <p>
          I'm a university student studying computer science in Japan. Likes
          photography and fashion. Of course I like sleeping and eating, but
          what I like best is listening to music.
        </p>
      </div>

      <div>
        <h2 class={css({ textStyle: 'h2' })}>Projects</h2>
        <ProjectList />
      </div>
    </div>

    <LyricRoll client:load />
  </body>
</Layout>
